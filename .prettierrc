{
  "semi": true,
  "trailingComma": "all",
  "singleQuote": true,
  "printWidth": 80,
  "tabWidth": 2,
  "useTabs": false,
  "jsxSingleQuote": true,
  "bracketSpacing": true,
  "arrowParens": "always",
  "importOrder": [
    "^(react|next)",
    "<THIRD_PARTY_MODULES>",
    "^@/widgets",
    "^@/domains",
    "^@/features",
    "^@/entities",
    "^@/shared",
    "^@/(.*)$",
    "^[@/]",
    "^[./]",
    "^[../]"
  ],
  "tailwindFunctions": ["cva"],
  "importOrderSortSpecifiers": true,
  "plugins": [
    "@trivago/prettier-plugin-sort-imports",
    "prettier-plugin-tailwindcss"
  ]
}
